//extends layout

block content
  style.
    h1 {
      font-size: 90px;
      color: #599;
    }
    dl {
      margin: 0;
      padding: 0;
    }
    dt {
      font-weight: bold;
      margin-bottom: 10px;
    }
    a {
      color: #007bff;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  h1 #{title }
  dl
    each instance in clothinstances
      dt #{instance.name} 
      a(href=instance.url) view here.

